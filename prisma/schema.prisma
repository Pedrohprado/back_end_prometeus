generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Prometeus {
    id              String    @id @default(uuid())
    prometeusCode   String
    soldador        String
    cartao          Int
    setor           Int
    gas             String
    vazaoDoGas      String
    diametroArame   String
    velocidadeArame String
    Welding         Welding[]
    createdAt       DateTime  @default(now())
    Status          Status[]
}

model Welding {
    id        String    @id @default(uuid())
    capture   String
    amperagem Int
    createdAt DateTime
    weldingId String
    prometeus Prometeus @relation(fields: [weldingId], references: [id])
}

model Status {
    id          String    @id @default(uuid())
    status      String
    tempo       Int
    prometeusId String    @unique
    createdAt   DateTime  @default(now())
    updateAt    DateTime  @updatedAt
    prometeus   Prometeus @relation(fields: [prometeusId], references: [id])
}
